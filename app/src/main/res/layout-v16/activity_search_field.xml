<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_field"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="labs.gecko.where.SearchFieldActivity">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="labs.gecko.where.SearchFragment"
        android:layout_below="@+id/searchText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/searchFragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="16"
        android:id="@+id/searchText"
        android:textAlignment="center"
        android:hint="@string/search_hint"
        android:selectAllOnFocus="false"
        android:fontFamily="sans-serif-light"
        android:imeOptions="actionGo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorLink="?attr/actionMenuTextColor"
        android:inputType="textFilter" />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_above="@+id/searchFragment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/common_google_signin_btn_text_dark_focused" />

</RelativeLayout>
